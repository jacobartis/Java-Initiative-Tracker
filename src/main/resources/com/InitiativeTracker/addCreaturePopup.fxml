<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.InitiativeTracker.AddCreatureController" stylesheets="@style.css">
    <VBox spacing="10" alignment="CENTER">
        <Label fx:id="label" text="THIS IS A TEST"/>
        <TextField fx:id="cName" promptText="Enter creature name"/>
        <Spinner fx:id="cInitiative" promptText="Enter creature name">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="50"/>
            </valueFactory>
        </Spinner>
        <Button fx:id="closeButton" text="Close" onAction="#closeCurrent"/>
        <Button fx:id="addButton" text="Add" onAction="#addCreature"/>
    </VBox>
</StackPane>